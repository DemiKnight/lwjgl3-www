{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": false,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./client/*"]
    },
    "types": ["@types/web", "react/next", "react-dom/next"]
  },
  "include": ["types", "client"],
  "exclude": ["public", "scripts", "server", "**/node_modules", "**/.*/"]
}
