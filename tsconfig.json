{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./client/*"]
    },
    "types": ["node", "react/experimental", "react-dom/experimental"]
  },
  "include": ["./types/**/*", "./client/**/*", "assets/palette/tailwind.ts"],
  "exclude": ["public", "scripts", "server", "**/node_modules", "**/.*/"]
}
